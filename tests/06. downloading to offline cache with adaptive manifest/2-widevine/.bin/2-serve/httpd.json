{
  "renderSingle":  false,
  "cleanUrls":     false,
  "trailingSlash": false,
  "etag":          false,
  "symlinks":      false,
  "logReq":        true,
  "logRes":        false,

  "headers": [
    {
      "source":  "**/*.m3u8",
      "headers": [
        {
          "key":   "Content-Type",
          "value": "application/vnd.apple.mpegurl"
        }
      ]
    },
    {
      "source":  "**/*.ts",
      "headers": [
        {
          "key":   "Content-Type",
          "value": "video/mp2t"
        }
      ]
    },
    {
      "source":  "audio/*.ts",
      "headers": [
        {
          "key":   "Content-Type",
          "value": "audio/mp2t"
        }
      ]
    },
    {
      "source":  "captions/*.vtt",
      "headers": [
        {
          "key":   "Content-Type",
          "value": "text/vtt"
        }
      ]
    }
  ],

  "rewrites": [
    {
      "engine":        "regex",
      "source":        "^/(?!audio|captions)([^/]+)/[^/]+(\\.m3u8)$",
      "destination":   "/$1$2",
      "flags":         "",
      "terminal":      true
    },
    {
      "engine":        "regex",
      "source":        "^/(audio|captions)/[^/]+(\\.m3u8)$",
      "destination":   "/$1$2",
      "flags":         "",
      "terminal":      true
    },
    {
      "engine":        "regex",
      "source":        "^/(?!audio)[^/]+/(\\d+\\.ts)$",
      "destination":   "/video/$1",
      "flags":         "",
      "terminal":      true
    }
  ]
}
